<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/__dy_item_container_layout__"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:background="@drawable/dy_item_common_back_shape_rectangle"
        >


        <ImageView
            android:id="@+id/dyItemLeftImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/dyItemLeftTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/dyItemLeftImageView"

            android:text="名字"
            android:textColor="@color/wechat_all_black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/dyItemRightTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/dyItemRightImageView"
            android:layout_marginRight="12dp"

            android:text="大哥"
            android:textColor="@color/wechat_gray_8f"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/dyItemRightImageView"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"

            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@mipmap/wechat_icon_arrow"
            />


    </RelativeLayout>


</RelativeLayout>